{
  "name": "Adaptive Bit Rate Analyser",
  "description": "Analyse Youtube's ABR traffic",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "webRequest",
    "webNavigation",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://*.googlevideo.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
